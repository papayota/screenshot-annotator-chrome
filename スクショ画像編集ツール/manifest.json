{
  "manifest_version": 3,
  "name": "スクリーンショット注釈エディタ",
  "version": "1.0.0",
  "description": "画面のスクリーンショットを取得し、注釈（赤枠、矢印、番号）を追加してPNGとして保存できるChrome拡張",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "action": {
    "default_title": "スクリーンショットを撮影して編集"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

